    <style>
      body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        height: 100vh;
        margin: 0;
      }
      .content {
        text-align: center;
        margin-top: 10px;
      }
      form {
        margin-top: 30px;
      }

      input[name="user[name]"],
      input[name="user[phone_number]"],
      input[name="session[name]"],
      input[name="session[phone_number]"] {
        /* Add specific styles for name and phone_number inputs */
        /* For example: */
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 16px;
        margin-bottom: 5px;
        /* width: 100%; Adjust the width as needed */
      }
    </style>
  
    <div class="content">
      <h1>Welcome to Social-pulse</h1>
      <p>Be ready to run the world on your fingers</p>
    </div>

    <% if @user.errors.full_messages.any? %>
        <% @user.errors.full_messages.each do |error_message| %>
         <p><%= error_message %> </p>
        <% end %>
      <% end %>
    
    <div class="form">
      <%= form_with(model: @user, local: true) do |form| %>
      
      
        <%= form.label :name %>
        <%= form.text_field :name %>

        <%= form.label :email %>
        <%= form.email_field :email %>

        <%= form.label :password %>
        <%= form.password_field :password %>

        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation %>

        <%= form.label :phone_number %>
        <%= form.text_field :phone_number %>
        
        <%= form.submit %>
      <% end %>
    </div>
    <% if @user.errors.full_messages.any? %>
        <% @user.errors.full_messages.each do |error_message| %>
          <p style="color: red;"><%= error_message %> </p>
        <% end %>
    <% end %>