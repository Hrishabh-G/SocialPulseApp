<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Your head content -->
</head>
<body>
  <div class="login-container">
    <div class="login-form">
      <h2>Password Reset</h2>
      <div class="form">
        <%= form_with(url: password_reset_path(@user.password_reset_token), method: :patch) do |form| %>
          <%= form.label :user, 'New Password' %>
          <%= form.password_field :'user[password]', class: 'form-input' %>

          <%= form.label :user, 'Confirm New Password' %>
          <%= form.password_field :'user[password_confirmation]', class: 'form-input' %>

          <%= form.submit 'Update Password', class: 'form-input' %>
        <% end %>
      </div>
    </div>

    <div class="login-side">
      <!-- Add any content for the side if required -->
    </div>
  </div>
</body>
</html>
