<%= form_with(model: [ @post, @comment], url: post_comments_path(@post), method: :post) do |form| %>
  <%= form.hidden_field :parent_comment_id, value: @comment.parent_comment_id %>
  <%= form.text_area :content, placeholder: 'Add a comment...', rows: 2 %>
  <%= form.submit 'Comment', class: 'btn btn-primary' %>
<% end %>

